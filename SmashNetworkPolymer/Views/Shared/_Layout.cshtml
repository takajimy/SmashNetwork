<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Scripts/Polymer")
        <link rel="import" href="~/Scripts/Polymer/core-icon/core-icon.html" />
        <link rel="import" href="~/Scripts/Polymer/custom-elements/smash-network-toolbar.html">
        <link rel="import" href="~/Scripts/Polymer/paper-drawer-panel/paper-drawer-panel.html">
        <link rel="import" href="~/Scripts/Polymer/custom-elements/smash-network-drawer-panel.html">
        <link rel="import" href="~/Scripts/Polymer/iron-flex-layout/classes/iron-flex-layout.html">
        <link rel="import" href="~/Scripts/Polymer/custom-elements/smash-network-navigator.html">
    </head>
    <body>
        <smash-network-drawer-panel>
            @RenderBody()
        </smash-network-drawer-panel>
        
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
