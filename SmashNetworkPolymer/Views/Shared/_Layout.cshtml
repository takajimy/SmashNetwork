<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Scripts/Polymer")

        
        <link rel="import" href="~/Scripts/Polymer/core-icon/core-icon.html" />
        <link rel="import" href="~/Scripts/Polymer/paper-toolbar/paper-toolbar.html">
        <link rel="import" href="~/Scripts/Polymer/paper-icon-button/paper-icon-button.html">
        <link rel="import" href="~/Scripts/Polymer/iron-icons/iron-icons.html">
    
        <style is="custom-style">
            paper-toolbar.mine {
                --paper-toolbar-background: red;
                opacity: 0.5;
            }
        </style>
    </head>
    <body>
        <paper-toolbar class="mine">
            <paper-icon-button icon="menu" on-tap="menuAction"></paper-icon-button>
            <div class="title">Title</div>
            <paper-icon-button icon="more-vert" on-tap="moreAction"></paper-icon-button>
        </paper-toolbar>
        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
